<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thor.fruitstation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_my_basket"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_my_basket"
        android:supportsRtl="true"
        android:theme="@style/Theme.FruitStation"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.AddUpdateKategori"></activity>
        <activity android:name=".activity.DaftarAkun" />
        <activity android:name=".activity.LetSell" />
        <activity android:name=".activity.ItemDetail" />
        <activity android:name=".activity.KategoriDetail" />
        <activity android:name=".activity.Login" />
        <activity android:name=".activity.Home" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>