<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg_item_category"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/img_item_buah"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_nama_item_buah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
       android:layout_marginBottom="36dp"
        android:text="nama buahnye" />

    <TextView
        android:id="@+id/txt_harga_item_buah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="12000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nama_item_buah"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/txt_harga_item_buah"
        android:src="@drawable/ic_item_add" />


</RelativeLayout>